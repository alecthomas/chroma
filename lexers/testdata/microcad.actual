use std::math::*;
use std::ops::*;
use std::geo3d::*;

/// A CSG cube.
part CsgCube(size: Length) {
    s = size / sqrt(2.1); /* Inline comment */
    body = Sphere(r = s) & Cube(size);
    holes = Cylinder(h = size, d = s).orient([X,Y,Z]);
    body - holes;
}

CsgCube(50mm);
